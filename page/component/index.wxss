.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.webinfo {  
  position: relative; 
  left:0rpx; 
  width: 750rpx;  
  height: 200rpx;  
  display: flex;  
  flex-direction: row;  
  align-items: center;  
}  
.web__info-img{
    width: 100rpx;
    height: 100rpx;
}
.head{
    padding: 80rpx;
    line-height: 1;
}
.body{
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
}
.title{
    font-size: 52rpx;
}
.desc{
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
}
.desc_highlight{
    margin-top: 10rpx;
    color: #3db4f1;
    font-size: 28rpx;
}

.widgets__item{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: #ebe6e6;
    overflow: hidden;
    border-radius: 4rpx;
    cursor: pointer;
}
.widgets__info{
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
}
.widgets__info_show{
}
.widgets__info_show .widgets__info-img{
    transform: rotate(-90deg);
}
.widgets__info-name{
    padding-left:40rpx;
    flex: 1;
}
.widgets__info-img{
    width: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}
.widgets_button_left{
    position: relative;
    right: 20rpx;
}

.widgets_button_right{
    position: relative;
    right: 10rpx;
}

.widgets__list{
    display: none;
}
.widgets__list_show{
    display: block;
}
.widget{
    position: relative;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    background-color: #f0f0ea98;
}
.widget__arrow{
    position: absolute;
    top: 28rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 40rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}

.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other_button_hover {
  background-color: blue;
}

.hot__name{
  font-size:20rpx; 
  position: relative;
  top:10rpx;
  left:0rpx;
}
.widget__name{
  position: relative;
  top:0rpx;
  left:0rpx;
}

.new_tag {
    background-color: #3db4f1;
    font-size: 10px;
    color: #fff;
    padding: 0 2px;
    margin-left: 5px;
}

.seq_highlight {
    color: #3db4f1;
    font-style: italic;
}

.seq {
    color: #b8b7b7;
    font-style: italic;
}
.green {
  background: rgb(183, 183, 204) !important;
}


.order-item {
  height: 240rpx;
  width: 100%;
  display: flex;
  position: relative;
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: #07C160; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -240rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}

.collect{  
  width: 120rpx;  
  height: 100%;  
  background-color: #07C160; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -120rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}

.comment{  
  width: 120rpx;  
  height: 100%;  
  background-color: #9B9B9E; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -240rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}



.footer {
    background: rgb(87, 81, 81);
    text-align: center;
}
.ft_img {
    width: 100%;
    text-align: center;
    background: #000;
}

.footer_copy {
    color: #d2d2d2;
    font-size: 28rpx;
}

